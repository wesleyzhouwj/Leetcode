class Solution {
    int max = 0;
    public int maxArea(int[] height) {
        int left = 0, right = height.length-1;
        while(left < right){
            int hei = Math.min(height[left],height[right]);
            int lon = right - left;
            int area = hei * lon;
            max = Math.max(max,area);
            
            if(height[left] < height[right]){
                left++;
            }else{
                right--;
            }
        }
        return max;
    }
}
